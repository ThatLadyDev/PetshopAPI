            "post": {
                "tags": [
                    "User"
                ],
                "summary": "Create A User Account",
                "operationId": "userCreate",
                "parameters": [
                    {
                        "name": "first_name",
                        "in": "query",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
