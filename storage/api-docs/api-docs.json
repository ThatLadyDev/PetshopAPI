            "get": {
                "tags": [
                    "User"
                ],
                "summary": "Logout A User Account",
                "operationId": "userLogout",
                "responses": {
                    "200": {
                        "description": "Success"
                    },
                    "401": {
                        "description": "Unauthenticated"
                    },
                    "500": {
